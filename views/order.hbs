<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    {{>header}}

    <div class="container-mt-4">
        <main role="main">
            <div class="row">
                <div class="col">
                    <h1>Orders</h1>
                    <div class="table-responsive-sm">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Order</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each order}}
                                <tr>
                                    <td>{{this._id}}</td>
                                    <td>{{this.order}}</td>
                                    <td>{{this.total}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/order/{{this._id}}">Update</a>
                                        <a class="btn btn-danger" href="/order/delete/{{this._id}}">Delete</a>
                                    </td>
                                </tr>

                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>